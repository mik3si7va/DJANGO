{
  "window.zoomLevel": 0,
  "python.languageServer": "Pylance", // ms-python.vscode-pylance
  "python.testing.unittestEnabled": false, // ms-python.python
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [], // -x to bail
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],
  "python.formatting.autopep8Args": ["--indent-size=4"],
//   "python.defaultInterpreterPath": "c:\\Users\\mik3si7va\\AppData\\Local\\Programs\\Python\\Python310\\python.exe",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python", // ms-python.python
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[css]": {
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "vscode.css-language-features",
  "editor.formatOnSave": true,
  "editor.autoIndent": "full"
  },

  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "files.associations": {
  "**/templates/**/*.html": "html",
  "**/base_templates/**/*.html": "html",
  "*.html": "html",
  "*.js": "javascript",
  "*.jsx": "javascriptreact",
  "*.xml": "html",
  "*.svg": "html",
  "**/requirements{/**,*}.{txt,in}": "pip-requirements"
}
,
  "emmet.includeLanguages": {
    "django-html": "html", // batisteo.vscode-django
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "OM Theme (Night Owl Italic)",
  "explorer.compactFolders": false,
  "scm.compactFolders": false,
  "python.defaultInterpreterPath": "c:\\Users\\mik3si7va\\AppData\\Local\\Programs\\Python\\Python310\\python.exe"
}